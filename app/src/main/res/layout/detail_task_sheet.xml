<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingHorizontal="15dp"
    android:paddingVertical="30dp"
    android:background="@color/colorPrimary">
<TextView
    android:id="@+id/titleTV"
    style="@style/AppFontColorWhite"
    android:padding="5dp"
    android:background="@drawable/custom_title_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="title of text"/>
<TextView
    android:id="@+id/dateTV"
    android:layout_marginTop="4dp"
    style="@style/AppSmallText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1,sep"/>
    <LinearLayout
        android:background="@drawable/custom_detail_back"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detailTV"
            style="@style/AppMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="details of text here included"/>
    </LinearLayout>
</LinearLayout>