<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppFont">
        <item name="fontFamily">@font/nexa</item>
    </style>

    <style name="AppTitleFont">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="AppFontColorPrimary" parent="AppFont">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppColorGrey" parent="AppFont">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="AppFontColorPrimaryDark" parent="AppFont">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppFontColorWhite" parent="AppFont">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppSmallText" parent="AppFontColorPrimaryDark">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppMediumText" parent="AppFontColorPrimaryDark">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppLargeText" parent="AppFontColorPrimaryDark">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppExtraLargeText" parent="AppFontColorWhite">
        <item name="android:textSize">24sp</item>
    </style>
</resources>